<%- include("../partials/header.ejs") %>
<%if(clucksData){%>
<div class="container">
    <div class="card">
      <% for (let i = 0 ; i < clucksData.length; i++) { %>
      <% let cluck = clucksData[i]%>
      <div class="card-body">
        <h5 class="card-title">
          <img src="images/otherChicken.svg" alt="" width="30" height="25" />
          <%= cluck.username + "------ " + cluck.createdAt%>
        </h5>
        <p class="card-text"><%= cluck.content %></p>
      </div>
      <img
        src="<%= cluck.imageUrl %>"
        class="card-img-bottom"
        style="width: 500px"
      />
      <% } %>
    </div>
  </div>
  <% } %>
<%- include("../partials/footer.ejs") %>