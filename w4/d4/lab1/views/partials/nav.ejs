<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Express App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Main</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/select">Select Langauge</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/hello_world">Hello World</a>
                </li>
                <% if(username) { %> 
                    <li class="nav-item">
                        <span>Hello, <%- username %>!</span>
                        <form action="/sign_out" method="POST">
                            <button type="submit" class="btn btn-outline-dark">Sign Out</button>
                        </form>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <span>Please Sign In</span>
                        <form action="/sign_in" method="POST">
                            <input class='form-control mr-2' type="text" name="username" id="username" placeholder="Type Name">
                            <button type="submit" class="btn btn-outline-dark">Sign In</button>
                        </form>
                    </li>
                <% } %>
            </ul>

    </nav>
</header>
